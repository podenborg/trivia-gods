{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es6"],
    "target": "es5",
    "rootDir": "src",
    "outDir": "build",    
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": true,      
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "typeRoots" : ["./node_modules/@types"]
  },
  "include": [
    "src/**/*"
  ]
}